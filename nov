    <script>
        // --- Navigation Logic ---
        function switchPlatform(platform) {
            const dashboardBtn = document.getElementById('btn-dashboard');
            const metaBtn = document.getElementById('btn-meta');
            const shopeeBtn = document.getElementById('btn-shopee');
            
            const dashboardPanel = document.getElementById('panel-dashboard');
            const metaPanel = document.getElementById('panel-meta');
            const shopeePanel = document.getElementById('panel-shopee');
            
            const shopeeLogoIcon = document.getElementById('shopee-logo-icon');
            const metaLogoIcon = document.getElementById('meta-logo-icon');

            // Reset All Buttons
            dashboardBtn.classList.remove('nav-tab-active-general');
            metaBtn.classList.remove('nav-tab-active-meta');
            shopeeBtn.classList.remove('nav-tab-active-shopee');
            
            // Reset Logos
            shopeeLogoIcon.classList.remove('grayscale');
            metaLogoIcon.classList.remove('grayscale');

            // Hide All Panels
            dashboardPanel.classList.add('hidden');
            metaPanel.classList.add('hidden');
            shopeePanel.classList.add('hidden');

            // Activate Specific Platform
            if (platform === 'dashboard') {
                dashboardBtn.classList.add('nav-tab-active-general');
                dashboardPanel.classList.remove('hidden');
                shopeeLogoIcon.classList.add('grayscale');
                metaLogoIcon.classList.add('grayscale');
            } else if (platform === 'meta') {
                metaBtn.classList.add('nav-tab-active-meta');
                metaPanel.classList.remove('hidden');
                shopeeLogoIcon.classList.add('grayscale');
            } else {
                shopeeBtn.classList.add('nav-tab-active-shopee');
                shopeePanel.classList.remove('hidden');
                metaLogoIcon.classList.add('grayscale');
            }
        }

        function switchMetaTab(tabId) {
            const adsTab = document.getElementById('tab-meta-ads');
            const closingTab = document.getElementById('tab-meta-closing');
            const adsContent = document.getElementById('meta-content-ads');
            const closingContent = document.getElementById('meta-content-closing');

            if (tabId === 'ads') {
                adsContent.classList.remove('hidden');
                closingContent.classList.add('hidden');
                adsTab.classList.add('sub-tab-active');
                closingTab.classList.remove('sub-tab-active');
            } else {
                closingContent.classList.remove('hidden');
                adsContent.classList.add('hidden');
                closingTab.classList.add('sub-tab-active');
                adsTab.classList.remove('sub-tab-active');
            }
        }

        // --- Chart Configurations ---
        (function() {
            Chart.defaults.font.family = "'Nunito', sans-serif";
            const META_LIGHT = '#4D8DFF';
            const SHOPEE_COLOR = '#EE4D2D';

            // --- DASHBOARD CHARTS ---
            
            // 1. Revenue Share Pie Chart
            const revenueShareCtx = document.getElementById('revenueShareChart');
            if (revenueShareCtx) {
                new Chart(revenueShareCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['META Ads', 'Shopee Ads'],
                        datasets: [{
                            data: [12074558, 3017100],
                            backgroundColor: [META_LIGHT, SHOPEE_COLOR],
                            hoverOffset: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { position: 'bottom' },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        let label = context.label || '';
                                        if (label) { label += ': '; }
                                        label += new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR', maximumSignificantDigits: 3 }).format(context.raw);
                                        return label;
                                    }
                                }
                            }
                        }
                    }
                });
            }

            // 2. Efficiency Comparison Bar Chart
            const efficiencyCtx = document.getElementById('efficiencyComparisonChart');
            if (efficiencyCtx) {
                new Chart(efficiencyCtx, {
                    type: 'bar',
                    data: {
                        labels: ['META Ads', 'Shopee Ads'],
                        datasets: [
                            { label: 'Spend', data: [2000464, 389371], backgroundColor: '#CBD5E1', borderRadius: 4 },
                            { label: 'Revenue', data: [12074558, 3017100], backgroundColor: [META_LIGHT, SHOPEE_COLOR], borderRadius: 4 }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: { type: 'logarithmic', display: true } // Log scale due to large difference in spend
                        }
                    }
                });
            }

            // --- META CHARTS ---

            // 1. META CS Leads
            const csLeadsCtx = document.getElementById('csLeadsChart');
            if (csLeadsCtx) {
                new Chart(csLeadsCtx, {
                    type: 'bar',
                    data: {
                        labels: ['Anis', 'Yeni', 'Nadin', 'Agustin'],
                        datasets: [
                            { label: 'Leads Masuk', data: [130, 127, 122, 77], backgroundColor: META_LIGHT, borderRadius: 6, order: 2 },
                            { label: 'Closing', data: [7, 1, 8, 0], backgroundColor: '#10B981', borderRadius: 6, order: 1, type: 'line', borderColor: '#10B981', borderWidth: 2, pointBackgroundColor: '#fff', pointRadius: 5 }
                        ]
                    },
                    options: { responsive: true, maintainAspectRatio: false, scales: { y: { beginAtZero: true } } }
                });
            }

            // 2. META Funnel
            const metaFunnelCtx = document.getElementById('metaFunnelChart');
            if (metaFunnelCtx) {
                new Chart(metaFunnelCtx, {
                    type: 'bar',
                    data: {
                        labels: ['Leads', 'Closing'],
                        datasets: [{ label: 'Konversi', data: [456, 16], backgroundColor: [META_LIGHT, '#10B981'], borderRadius: 4 }]
                    },
                    options: { indexAxis: 'y', responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } }, scales: { x: { display: false }, y: { grid: { display: false } } } }
                });
            }

            // --- SHOPEE CHARTS ---

            // 3. Shopee ROI
            const shopeeRoiCtx = document.getElementById('shopeeRoiChart');
            if (shopeeRoiCtx) {
                new Chart(shopeeRoiCtx, {
                    type: 'bar',
                    data: {
                        labels: ['Biaya Iklan', 'Omzet'],
                        datasets: [{ label: 'Rupiah', data: [389371, 3017100], backgroundColor: ['#CBD5E1', SHOPEE_COLOR], borderRadius: 8, barThickness: 50 }]
                    },
                    options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } }, scales: { y: { display: false }, x: { grid: { display: false } } } }
                });
            }

            // 4. Shopee Funnel
            const shopeeFunnelCtx = document.getElementById('shopeeFunnelChart');
            if (shopeeFunnelCtx) {
                new Chart(shopeeFunnelCtx, {
                    type: 'line',
                    data: {
                        labels: ['Dilihat', 'Klik', 'Konversi'],
                        datasets: [{
                            label: 'Funnel', data: [28639, 1274, 6],
                            backgroundColor: 'rgba(238, 77, 45, 0.1)', borderColor: SHOPEE_COLOR, borderWidth: 3, fill: true, tension: 0.3
                        }]
                    },
                    options: { responsive: true, maintainAspectRatio: false, scales: { y: { type: 'logarithmic', display: false }, x: { grid: { display: false } } } }
                });
            }
        })();
    </script>
